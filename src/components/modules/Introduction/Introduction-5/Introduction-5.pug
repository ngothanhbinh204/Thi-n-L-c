section.introduction-5.section-py.bg-linear-2
	.container
		for i in [0, 1]
			- const isReverse = i % 2 !== 0
			.wrapper-grid(class= isReverse ? 'is-reverse' : '')
				.col-slider(
					data-aos= isReverse ? 'fade-left' : 'fade-right'
					data-aos-delay="200"
				)
					.machine-slider.relative
						.swiper
							.swiper-wrapper
								.swiper-slide
									.machine-grid
										.machine-item
											.img-wrapper
												+PugImg("./img/machine.png")
											h4.title
												a(href="#") Máy in UV
										.machine-item
											.img-wrapper
												+PugImg("./img/machine2.png")
											h4.title
												a(href="#") Máy in kỹ thuật số
										.machine-item.full
											.img-wrapper
												+PugImg("./img/machine.png")
											h4.title
												a(href="#") Máy in offset 4–6 màu

				//- Content Column
				.col-content(
					data-aos= isReverse ? 'fade-right' : 'fade-left'
					data-aos-delay="200"
				)
					h2 Máy Móc & Thiết Bị
					.desc
						p Sở hữu nền tảng sản xuất vững chắc cùng hệ thống máy móc – thiết bị hiện đại, Thiên Lộc đảm bảo quy trình in ấn nhanh chóng, ổn định và đạt chuẩn chất lượng cao.
					
					.group-controll.in-static
						.wrap-button-slide.machine-nav
							.btn-prev.btn-slider-2
								i.fa-solid.fa-chevron-left
							.btn-next.btn-slider-2
								i.fa-solid.fa-chevron-right
