section.section-contact.section-py
	.container
		.wrapper-contact(class="grid grid-cols-12 gap-10 lg:gap-15")
			.contact-info(class="col-span-12 lg:col-span-5")
				
				h2 CÔNG TY CỔ PHẦN ĐẦU TƯ TT CAPITAL
				
				//- Contact List
				.contact-list
					//- Address
					.contact-item
						.contact-icon
							i.fa-solid.fa-location-dot.fa-fw
						.contact-content
							.contact-label ĐỊA CHỈ VĂN PHÒNG
							.contact-value
								p Lầu 14, Tòa Nhà Lim 2, Số 62A Cách Mạng Tháng 8, Phường Võ Thị Sáu, Quận 3, Thành phố Hồ Chí Minh, Việt Nam
					
					//- Phone
					.contact-item
						.contact-icon
							i.fa-solid.fa-phone.fa-fw
						.contact-content
							.contact-label ĐIỆN THOẠI
							.contact-value
								a(href="tel:+842835352694") (+84) 28 3535 2694
								span  - 
								a(href="tel:+842835352672") (+84) 28 3535 2672
					
					//- Email
					.contact-item
						.contact-icon
							i.fa-solid.fa-envelope.fa-fw
						.contact-content
							.contact-label EMAIL
							.contact-value
								a(href="mailto:info@ttcapitalgroup.vn") info@ttcapitalgroup.vn
				
				//- Google Map
				.contact-map
					iframe(
						src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.3239936162194!2d106.68528931533381!3d10.787308792312827!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f35c43de38b%3A0x5e0e5c0c0c0c0c0c!2zNjJBIEPDoWNoIE3huqFuZyBUaMOhbmcgOCwgUGjGsOG7nW5nIDExLCBRdeG6rW4gMywgVGjDoG5oIHBo4buRIEjhu5MgQ2jDrSBNaW5o!5e0!3m2!1svi!2s!4v1234567890123!5m2!1svi!2s"
						width="100%"
						height="350"
						style="border:0;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"
					)

			//- RIGHT COLUMN - Contact Form (col-7)
			.contact-form-wrapper(class="col-span-12 lg:col-span-7")
				
				//- Form Header
				.form-header
					p.body-18 Mọi sự hợp tác tốt đẹp đều bắt đầu từ một cuộc trò chuyện. Hãy liên hệ với chúng tôi, mọi mong muốn của bạn sẽ được lắng nghe.
				
				//- Contact Form
				form.contact-form(action="#" method="post")
					
					.form-row
						.form-group
							input.form-control(
								type="text"
								name="name"
								placeholder="Họ và tên"
								required
							)
					
					.form-row
						.form-group
							input.form-control(
								type="email"
								name="email"
								placeholder="Email"
								required
							)
					
					.form-row
						.form-group
							input.form-control(
								type="tel"
								name="phone"
								placeholder="Số điện thoại"
								required
							)
					
					.form-row
						.form-group
							input.form-control(
								type="text"
								name="subject"
								placeholder="Tiêu đề"
								required
							)
					
					.form-row
						.form-group
							textarea.form-control(
								name="message"
								rows="5"
								placeholder="Nội dung"
								required
							)
					
					//- Captcha Box (Placeholder for CF7)
					.form-row
						.form-group
							.captcha-box
								.captcha-checkbox
									input(type="checkbox" id="captcha-check")
									label(for="captcha-check") Tôi không phải là người máy
								.captcha-logo
									img(src="https://www.google.com/recaptcha/about/images/reCAPTCHA-logo.png" alt="reCAPTCHA")
					
					//- Submit Button
					.form-row
						button.btn.btn-primary(type="submit")
							| GỬI NGAY
							i.fa-solid.fa-arrow-right