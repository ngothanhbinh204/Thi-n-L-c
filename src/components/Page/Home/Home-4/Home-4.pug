	var workflowSteps = [
		{
			id: 1,
			step: "1. Tư vấn",
			description: "Hiểu rõ nhu cầu và mục tiêu của bạn để đưa ra giải pháp phù hợp nhất.",
			icon: "icon-workflow.svg"
		},
		{
			id: 2,
			step: "2. Thiết kế",
			description: "Phác thảo ý tưởng sáng tạo, kết hợp thẩm mỹ và tính ứng dụng cao.",
			icon: "icon-workflow.svg"
		},
		{
			id: 3,
			step: "3. In ấn",
			description: "Sử dụng công nghệ hiện đại, đảm bảo màu sắc và chất lượng đúng chuẩn.",
			icon: "icon-workflow.svg"
		},
		{
			id: 4,
			step: "4. Gia công",
			description: "Hoàn thiện sản phẩm với các bước xử lý tỉ mỉ và chi tiết.",
			icon: "icon-workflow.svg"
		},
		{
			id: 5,
			step: "5. Kiểm tra QC",
			description: "Hoàn thiện sản phẩm với các bước xử lý tỉ mỉ và chi tiết.",
			icon: "icon-workflow.svg"
		},
		{
			id: 6,
			step: "6. Giao hàng",
			description: "Vận chuyển đúng hẹn, hỗ trợ và chăm sóc khách hàng sau bán.",
			icon: "icon-workflow.svg"
		}
	]

section.section-home-4.section-py
	.container
		//- Section Title
		.section-header(class="text-center")
			h2.title-48.text-white.font-medium Quy Trình Làm Việc

		//- Workflow Grid - 6 columns
		.workflow-grid
			each item, index in workflowSteps
				- var isOdd = (item.id % 2 !== 0)
				- var arrowPath = isOdd ? "./img/arrow_workflow.svg" : "./img/arrow_workflow_down.svg"
				.workflow-item(class=isOdd ? 'item-odd' : 'item-even')
					//- Description
					.workflow-desc
						p= item.description

					//- Icon Box with dashed circle
					.workflow-box
						.workflow-circle
							.wrapper-icon
								.workflow-icon
									+PugImg(`./img/${item.icon}`)(class="w-full h-full object-contain")
						.workflow-label
							span= item.step

					if index < 6
					.workflow-arrow
						+PugImg(arrowPath)(class="w-full h-full object-contain")
